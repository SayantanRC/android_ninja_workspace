<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_ninja_workspace" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryDark">@color/blue_1</item>
        <item name="colorAccent">@color/blue_1</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Theme.MyTitle</item>
    </style>

    <!--Theme for upper case action bar label-->
    <style name="Theme.MyTitle"
        parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/Theme.MyTitle.Text</item>
    </style>

    <style name="Theme.MyTitle.Text"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAllCaps">true</item>
    </style>
</resources>